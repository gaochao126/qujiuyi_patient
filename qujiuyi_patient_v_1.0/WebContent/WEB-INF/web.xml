<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>qujiuyi_patient</display-name>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>initial</servlet-name>
    <servlet-class>com.jiuyi.qujiuyi.servlet.InitServlet</servlet-class>
    <load-on-startup>10</load-on-startup>
  </servlet>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>fileUplod</servlet-name>
    <servlet-class>com.jiuyi.qujiuyi.servlet.FileUploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>fileUplod</servlet-name>
    <url-pattern>/fileUplod</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>api</servlet-name>
    <servlet-class>com.jiuyi.qujiuyi.servlet.ApiServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>api</servlet-name>
    <url-pattern>/api</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>shortcutPay</servlet-name>
    <servlet-class>com.jiuyi.qujiuyi.servlet.ShortcutPayServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>shortcutPay</servlet-name>
    <url-pattern>/shortcutPay</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>weixinPayNotify</servlet-name>
    <servlet-class>com.jiuyi.qujiuyi.servlet.WeixinPayNotifyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>weixinPayNotify</servlet-name>
    <url-pattern>/weixinPayNotify</url-pattern>
  </servlet-mapping>
</web-app>