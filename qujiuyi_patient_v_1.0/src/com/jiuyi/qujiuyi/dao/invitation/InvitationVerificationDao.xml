<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiuyi.qujiuyi.dao.invitation.InvitationVerificationDao">
    <select id="queryInvitationVerificationsByPatientId" parameterType="InvitationVerificationDto" resultType="InvitationVerificationDto">
        select * from t_invitation_verification
        <where>
            patientId = #{patientId}
        </where>
    </select>
    
    <insert id="saveInvitationVerification" parameterType="InvitationVerificationDto">
    	insert into t_invitation_verification
    	(patientId, invitationCode, insertTime)
    	values
    	(#{patientId}, #{invitationCode}, #{insertTime})
    </insert>
</mapper>